@model FraudFence.Web.Models.LandingViewModel

@{
    ViewData["Title"] = "Home";
}

<div class="container-fluid">
    <div class="row mb-5">
        <div class="col-12">
            <div class="text-center py-5">
                <h1 class="display-4 mb-3">FraudFence</h1>
                <p class="lead text-muted">A community platform to help Malaysians identify, report, and avoid scams.</p>
            </div>
        </div>
    </div>

    <div class="row mb-2">
        <div class="col-lg-8">
            <h3 class="mb-4">Recent Scam Alerts</h3>
        </div>
        <div class="col-lg-4">
            <div style="height: 58px;"></div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-lg-8">
            @foreach (var card in Model.RecentArticles)
            {
                <div class="card mb-4 article-item">
                    <a asp-controller="Articles"
                       asp-action="Details"
                       asp-area=""
                       asp-route-id="@card.Id"
                       class="card-link text-decoration-none text-dark">

                        <div class="card-body">
                            <h5 class="card-title">@card.Title</h5>

                            <p class="card-text">@Html.Raw(card.Excerpt)</p>
                            <div class="text-right">
                                <span class="badge badge-info">@card.CategoryName</span>
                            </div>
                        </div>
                    </a>
                </div>
            }

            @if (!Model.RecentArticles.Any())
            {
                <p class="text-muted">No articles found—check back later!</p>
            }
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Community Stats Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0">Community Stats</h6>
                </div>
                <div class="card-body text-center">
                    <div class="row">
                        <div class="col-6">
                            <div class="h5 text-primary">@Model.ConsumerCount</div>
                            <small class="text-muted">@(Model.ConsumerCount == 1 ? "Consumer" : "Consumers")</small>
                        </div>
                        <div class="col-6">
                            <div class="h5 text-success">@Model.ReportSubmittedCount</div>
                            <small class="text-muted">@(Model.ReportSubmittedCount == 0 || Model.ReportSubmittedCount == 1 ? "Report" : "Reports")</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- How FraudFence Works Card -->
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">How FraudFence Works</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h6 class="small font-weight-bold">1. Report Scams</h6>
                        <p class="small text-muted mb-0">Anyone can submit scam reports to help warn others about new threats.</p>
                    </div>
                    <div class="mb-3">
                        <h6 class="small font-weight-bold">2. Educational Content</h6>
                        <p class="small text-muted mb-0">Articles and guides help people recognize and avoid common scams.</p>
                    </div>
                    <div class="mb-0">
                        <h6 class="small font-weight-bold">3. Community Posts</h6>
                        <p class="small text-muted mb-0">Members can share their experiences through posts to help others stay informed.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>