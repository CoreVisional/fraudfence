@model FraudFence.Web.Models.ErrorViewModel
@{
    Layout = null;
    string title = $"{Model.StatusCode} | FraudFence";
    string message = Model.StatusCode switch
    {
        404 => "The page you're looking for might have been removed or had its name changed.",
        401 or 403 => "You do not have permission to access this page.",
        400 => "Your client sent a request that is malformed or illegal.",
        _ => "Something went wrong. Please try again later."
    };
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no" />
    <title>@title</title>

    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/sb-admin-2/css/sb-admin-2.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        body, html {
            height: 100%;
        }

        .bg-gradient-primary {
            background-image: linear-gradient(180deg,#4e73df 10%,#224abe 100%);
        }

        .error[data-text] {
            position: relative;
            font-size: 7rem;
            font-weight: 800;
            line-height: 1;
            width: 12.5rem;
        }

            .error[data-text]:before {
                content: attr(data-text);
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                text-shadow: 0 0 30px rgba(0 0 0 /.15);
                opacity: .1;
            }
    </style>
</head>

<body class="d-flex align-items-center justify-content-center bg-gradient-primary">

    <div class="text-center text-white">
        <div class="error mx-auto" data-text="@Model.StatusCode">@Model.StatusCode</div>
        <p class="lead mb-4">@message</p>

        @if (Model.StatusCode >= 500)
        {
            <p class="small">
                We encountered an internal error. If you report this, please include the details below.
            </p>
        }

        @if (Model.ShowRequestId)
        {
            <div class="mt-4 text-left text-white-50">
                <h6>ADDITIONAL DETAILS</h6>
                <dl class="row">
                    <dt class="col-5">REQUEST&nbsp;ID</dt>
                    <dd class="col-7 user-select-all">@Model.RequestId</dd>

                    <dt class="col-5">DATE&nbsp;TIME&nbsp;(UTC)</dt>
                    <dd class="col-7">@DateTime.Now</dd>
                </dl>
            </div>
        }

        <a class="btn btn-light mt-3" asp-area="" asp-controller="Home" asp-action="Index">
            <i class="fas fa-arrow-left mr-2"></i>Back to Home
        </a>
    </div>

    <script src="~/lib/sb-admin-2/vendor/jquery/jquery.min.js"></script>
    <script src="~/lib/sb-admin-2/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
