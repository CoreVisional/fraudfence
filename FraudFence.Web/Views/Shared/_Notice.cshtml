@if (TempData["notice"] != null)
{
    <div class="alert @TempData["noticeBg"] alert-dismissible fade show mt-2" role="alert">
        @TempData["notice"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}