@model FraudFence.Web.Areas.Consumer.Models.CommentViewModel
@{
    ViewData["Title"] = "Comments";
}

<div class="container mt-5">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    <a href="javascript:history.back()" class="btn btn-outline-secondary mb-3">
        <i class="fas fa-arrow-left"></i> Back
    </a>

    <div class="row d-flex justify-content-center">
        <div class="col-md-10 col-lg-8">

            <div class="card mb-4 shadow-sm position-relative">
                <div class="card-body p-0">

                    @{
                        var images = Model.Post.PostAttachments
                            ?.Where(pa => pa.Attachment != null &&
                                          (pa.Attachment.Link.EndsWith(".jpg", StringComparison.OrdinalIgnoreCase) ||
                                           pa.Attachment.Link.EndsWith(".jpeg", StringComparison.OrdinalIgnoreCase) ||
                                           pa.Attachment.Link.EndsWith(".png", StringComparison.OrdinalIgnoreCase)))
                            .ToList();
                    }

                    @if (images != null && images.Any())
                    {
                        var carouselId = $"carousel_{Model.Post.Id}";

                        <div id="@carouselId" class="carousel slide">
                            <div class="carousel-inner">
                                @for (int i = 0; i < images.Count; i++)
                                {
                                    <div class="carousel-item @(i == 0 ? "active" : "")">
                                        <img src="@images[i].Attachment.Link"
                                             class="d-block w-100 img-fluid rounded-top"
                                             style="object-fit: contain; max-height: 400px;" alt="Post image"/>
                                    </div>
                                }
                            </div>

                            @if (images.Count > 1)
                            {
                                <a class="carousel-control-prev" href="#@carouselId" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#@carouselId" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            }
                        </div>
                    }

                    <div class="p-3">
                        <div class="post-content-container">
                            <p class="post-content-preview mb-2" id="postContent_@Model.Post.Id">@Model.Post.Content</p>
                            <br/>
                            @if ((Model.Post.Content?.Length ?? 0) > 150)
                            {
                                <a href="#" class="read-more-btn" data-target="#postContent_@Model.Post.Id">
                                    View More
                                </a>
                            }
                        </div>

                        @if (!string.IsNullOrEmpty(@Model.Post.User.Name))
                        {
                            <p class="mb-1">Posted by <strong>@Model.Post.User.Name</strong></p>
                        }

                        <div class="post-meta text-muted mt-2">
                            <small>
                                <i class="fas fa-calendar-alt"></i> @Model.Post.CreatedAt.ToString("yyyy-MM-dd")
                            </small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card shadow-sm">
                <div class="card-header">
                    @if (Model.Post != null)
                    {
                        <h4 class="mb-0">
                            <i class="fas fa-comments me-2"></i>Comments (@Model.Post.Comments.Count)
                        </h4>
                    }
                    else
                    {
                        <h4 class="mb-0">Comments</h4>
                    }
                </div>

                <div class="card-body">
                    @if (Model.Post != null)
                    {
                        <h5 class="mb-3">Leave a Comment</h5>
                        <form asp-action="AddComment" asp-controller="Post" method="post">
                            <input type="hidden" name="PostId" value="@Model.Post.Id"/>

                            <div class="w-100">
                                <textarea name="Content" class="form-control" rows="4" placeholder="What are your thoughts?"></textarea>
                            </div>
                            <div class="float-end mt-2 pt-1">
                                <button type="submit" class="btn btn-primary btn-sm">Post comment</button>
                            </div>
                        </form>
                    }
                </div>



                <hr class="my-0"/>

                <div class="card-body p-4">
                    @if (Model.Post != null && Model.Post.Comments.Any())
                    {
                        @foreach (var comment in Model.Post.Comments.OrderByDescending(c => c.CreatedAt))
                        {
                            <div class="d-flex flex-start mb-4">
                                @* <img class="rounded-circle shadow-1-strong me-3" *@
                                @*      src="https://placehold.co/65x65/EFEFEF/AAAAAA&text=User" alt="avatar" width="65" height="65" /> *@
                                <div class="flex-grow-1 flex-shrink-1">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <p class="mb-1">
                                            <strong>@(comment.User.Name ?? "Anonymous")</strong>
                                            <span class="small text-muted">- @comment.CreatedAt.ToShortDateString()</span>
                                        </p>
                                    </div>
                                    <p class="small mb-2">
                                        @comment.Content
                                    </p>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-center text-muted">Be the first to comment!</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .posts-list {
        max-width: 600px;
        margin: 0 auto;
    }

    .post-content-container {
        position: relative; 
        margin-bottom: 0.5rem;
    }

    .post-content-preview {
        display: -webkit-box;
        -webkit-line-clamp: 4; 
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: pre-wrap;
        margin-bottom: 0;
        line-height: 1.4em;
        max-height: 5.6em; 
        transition: max-height 0.3s ease-out;
    }

    .post-content-preview.expanded {
        -webkit-line-clamp: unset !important; 
        max-height: none !important;     
        overflow: visible !important;    
        text-overflow: initial !important;
        white-space: pre-wrap !important; 
    }

    .post-content-container::after {
        content: ""; 
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 1.5em;
        background: linear-gradient(to top, rgba(255,255,255,1), rgba(255,255,255,0));
        pointer-events: none;
        transition: opacity 0.3s ease-out;
    }

    .post-content-container.expanded::after {
        opacity: 0 !important; 
        
    }

    .read-more-btn {
        display: inline-block;
        margin-top: 0.5rem;
        font-size: 0.9em;
        color: #007bff;  
        text-decoration: none;
        cursor: pointer;
        font-weight: bold;
    }

    .btn-light {
        border-radius: 50%;
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .btn-light i {
        font-size: 1.2rem;
    }

    .carousel-inner img {
        object-fit: cover;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.read-more-btn').on('click', function (e) {
                e.preventDefault();

                var targetId = $(this).data('target'); 
                var contentElement = $(targetId); 
                var containerElement = contentElement.closest('.post-content-container'); 

                contentElement.toggleClass('expanded');
                containerElement.toggleClass('expanded');

                if (contentElement.hasClass('expanded')) {
                    $(this).text('View Less'); 
                } else {
                    $(this).text('View More');
                }
            });
        });
    </script>
}