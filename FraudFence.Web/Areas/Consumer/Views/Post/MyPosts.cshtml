@model FraudFence.Web.Areas.Consumer.Models.PostViewModel

@{
    ViewData["Title"] = "My Posts";
}

<h2 class="text-center mb-4">My Posts</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (Model.Posts.Count < 1)
{
    <div class="alert alert-info text-center" role="alert">
        You don't have any posts.
    </div>
}
else
{

    <div class="posts-list">
        @foreach (var post in Model.Posts.OrderByDescending(p => p.CreatedAt))
        {
            <div class="card mb-4 shadow-sm position-relative">
                <div class="card-body p-0">

                    @{
                        var images = post.PostAttachments
                            ?.Where(pa => pa.Attachment != null &&
                                          (pa.Attachment.Link.EndsWith(".jpg", StringComparison.OrdinalIgnoreCase) ||
                                           pa.Attachment.Link.EndsWith(".jpeg", StringComparison.OrdinalIgnoreCase) ||
                                           pa.Attachment.Link.EndsWith(".png", StringComparison.OrdinalIgnoreCase)))
                            .ToList();
                    }

                    @if (images != null && images.Any())
                    {
                        var carouselId = $"carousel_{post.Id}";

                        <div id="@carouselId" class="carousel slide">
                            <div class="carousel-inner">
                                @for (int i = 0; i < images.Count; i++)
                                {
                                    <div class="carousel-item @(i == 0 ? "active" : "")">
                                        <img src="@images[i].Attachment.Link"
                                             class="d-block w-100 img-fluid rounded-top"
                                             style="object-fit: contain; max-height: 400px;" alt="Post image"/>
                                    </div>
                                }
                            </div>

                            @if (images.Count > 1)
                            {
                                <a class="carousel-control-prev" href="#@carouselId" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#@carouselId" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            }
                        </div>
                    }

                    <div class="p-3">
                        <div class="post-content-container">
                            <p class="post-content-preview mb-2" id="postContent_@post.Id">@post.Content</p>
                            <br/>
                            @if ((post.Content?.Length ?? 0) > 150)
                            {
                                <a href="#" class="read-more-btn" data-target="#postContent_@post.Id">
                                    View More
                                </a>
                            }
                        </div>

                        @if (!string.IsNullOrEmpty(@post.User.Name))
                        {
                            <p class="mb-1">Posted by <strong>@post.User.Name</strong></p>
                        }

                        @if (post.Comments != null && post.Comments.Any())
                        {
                            <a href="@Url.Action("ViewComment", "Post", new { id = post.Id })" class="text-muted small">
                                View all @post.Comments.Count comments
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("ViewComment", "Post", new { id = post.Id })" class="text-muted small">
                                View all comments
                            </a>
                        }

                        <div class="post-meta text-muted mt-2">
                            <small>
                                <i class="fas fa-calendar-alt"></i> @post.CreatedAt.ToString("yyyy-MM-dd")
                            </small>
                        </div>
                    </div>

                    <div class="post-actions position-absolute" style="bottom: 10px; right: 10px;">
                        <form asp-action="Edit" asp-controller="Post" asp-route-id="@post.Id" method="get" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-info ml-2">
                                <i class="fas fa-edit"></i> Edit
                            </button>
                        </form>
                        <form asp-action="Delete" asp-controller="Post" asp-route-id="@post.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger ml-2" onclick="return confirm('Are you sure you want to delete this post?');">
                                <i class="fas fa-trash-alt"></i> Delete
                            </button>
                        </form>

                    </div>
                </div>
            </div>
        }
    </div>

}

<style>
    .posts-list {
        max-width: 600px;
        margin: 0 auto;
    }

    .post-content-container {
        position: relative; 
        margin-bottom: 0.5rem;
    }

    .post-content-preview {
        display: -webkit-box;
        -webkit-line-clamp: 4; 
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: pre-wrap;
        margin-bottom: 0;
        line-height: 1.4em;
        max-height: 5.6em; 
        transition: max-height 0.3s ease-out;
    }

    .post-content-preview.expanded {
        -webkit-line-clamp: unset !important; 
        max-height: none !important;     
        overflow: visible !important;    
        text-overflow: initial !important;
        white-space: pre-wrap !important; 
    }

    .post-content-container::after {
        content: ""; 
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 1.5em;
        background: linear-gradient(to top, rgba(255,255,255,1), rgba(255,255,255,0));
        pointer-events: none;
        transition: opacity 0.3s ease-out;
    }

    .post-content-container.expanded::after {
        opacity: 0 !important; 
        
    }

    .read-more-btn {
        display: inline-block;
        margin-top: 0.5rem;
        font-size: 0.9em;
        color: #007bff;  
        text-decoration: none;
        cursor: pointer;
        font-weight: bold;
    }

    .btn-light {
        border-radius: 50%;
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .btn-light i {
        font-size: 1.2rem;
    }

    .carousel-inner img {
        object-fit: cover;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.read-more-btn').on('click', function (e) {
                e.preventDefault();

                var targetId = $(this).data('target'); 
                var contentElement = $(targetId); 
                var containerElement = contentElement.closest('.post-content-container'); 

                contentElement.toggleClass('expanded');
                containerElement.toggleClass('expanded');

                if (contentElement.hasClass('expanded')) {
                    $(this).text('View Less'); 
                } else {
                    $(this).text('View More');
                }
            });
        });
    </script>
}