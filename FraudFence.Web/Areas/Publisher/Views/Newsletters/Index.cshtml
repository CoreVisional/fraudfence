@model IEnumerable<FraudFence.Web.Areas.Publisher.Models.Newsletters.NewsletterIndexViewModel>

@{
    ViewData["Title"] = "Manage Articles";
}

<div class="d-sm-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">Newsletters</h3>
    <a asp-action="Create" class="d-sm-inline-block btn btn-primary shadow-sm">
        <i class="fa-solid fa-plus fa-fw"></i> Schedule Newsletters
    </a>
</div>

<hr />

<partial name="_Notice" />

<table class="table table-striped table-show-dt">
    <thead>
        <tr>
            <th>Subject</th>
            <th>Scheduled At</th>
            <th>Sent At</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Subject</td>
                <td>@item.ScheduledAt.ToString("g")</td>
                <td>
                    @if (item.SentAt.HasValue)
                    {
                        @item.SentAt.Value.ToString("g")
                    }
                    else
                    {
                        <span class="text-muted">-</span>
                    }
                </td>
                <td>
                    @if(item.SentAt.HasValue) {
                    <span class="badge badge-success">Sent</span>
                    }
                    else if(item.IsDisabled) {
                    <span class="badge badge-danger">Cancelled</span>
                    }
                    else {
                    <span class="badge badge-warning">Pending</span>
                    }
                </td>
                <td>
                    @if (!item.IsDisabled)
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i>
                        </a>
                    }

                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                        <i class="fas fa-eye"></i>
                    </a>

                    @if (!item.IsDisabled)
                    {
                        <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#confirmDelete@(item.Id)">
                            <i class="fas fa-trash fa-sm fa-fw"></i>
                        </button>

                        <div class="modal fade" id="confirmDelete@(item.Id)" role="dialog">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="confirmDelete@(item.Id)">Confirm Delete</h5>
                                        <button type="button" class="close" data-dismiss="modal">
                                            <span>&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Delete this scheduled newsletter?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                        <form asp-action="Delete" method="post">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
