@using FraudFence.Web.Areas.Publisher.Models.Articles
@model IEnumerable<ArticleIndexViewModel>

@{
    ViewData["Title"] = "Manage Articles";
}

<div class="d-sm-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">Articles</h3>
    <a asp-action="Create" class="d-sm-inline-block btn btn-primary shadow-sm">
        <i class="fa-solid fa-plus fa-fw"></i> New Article
    </a>
</div>

<hr />

<partial name="_Notice" />

<table class="table table-striped table-show-dt">
    <thead>
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var article in Model)
        {
            <tr>
                <td>@article.Title</td>
                <td>@article.CategoryName</td>
                <td>
                    <div class="action-list-wrapper">
                        <a asp-action="Details" asp-route-id="@article.Id" class="btn btn-primary btn-sm">
                            <i class="fas fa-info fa-sm fa-fw"></i>
                        </a>
                        <a asp-action="Edit" asp-route-id="@article.Id" class="btn btn-warning btn-sm">
                            <i class="fas fa-pen fa-sm fa-fw"></i>
                        </a>

                        <button type="button"
                                class="btn btn-danger btn-sm"
                                data-toggle="modal"
                                data-target="#confirmDelete@(article.Id)">
                            <i class="fas fa-trash fa-sm fa-fw"></i>
                        </button>

                        <div class="modal fade" id="confirmDelete@(article.Id)" tabindex="-1" role="dialog">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Confirm Delete</h5>
                                        <button type="button" class="close" data-dismiss="modal">
                                            <span>&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        @if (article.CanDelete)
                                        {
                                            <p>Are you sure you want to delete “<strong>@article.Title</strong>”? This action cannot be undone.</p>
                                        }
                                        else
                                        {
                                            <p>
                                                <strong>Oops!</strong> This article has been scheduled in a pending newsletter.
                                                Please remove it from the newsletter before deleting.
                                            </p>
                                        }
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                        @if (article.CanDelete)
                                        {
                                            <form asp-action="Delete" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@article.Id" />
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            </form>
                                        }
                                        else
                                        {
                                            <button type="button"
                                                    class="btn btn-danger"
                                                    data-dismiss="modal">
                                                OK
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
