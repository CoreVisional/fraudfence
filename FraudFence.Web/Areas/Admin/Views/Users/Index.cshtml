@model List<FraudFence.EntityModels.Dto.UserViewModel>
@{
    ViewData["Title"] = "User Management";
    var allRoles = ViewBag.AllRoles as List<string>;
    var currentSearch = ViewBag.CurrentSearch as string;
    var currentRole = ViewBag.CurrentRole as string;
}

<h1>User Management</h1>
<form asp-action="Index" method="get" class="form-inline mb-3">
    <div class="form-group mr-2">
        <input type="text" name="search" value="@currentSearch" class="form-control" placeholder="Search by name or email" />
    </div>
    <div class="form-group mr-2">
        <select name="role" class="form-control">
            <option value="">All Roles</option>
            @if (allRoles != null)
            {
                foreach (var role in allRoles)
                {
                    <option value="@role" selected="@(role == currentRole ? "selected" : null)">@role</option>
                }
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
    <a asp-action="Index" class="btn btn-secondary ml-2">Reset</a>
</form>
<a asp-action="Create" class="btn btn-success mb-3">Create User</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>UserName</th>
            <th>Phone</th>
            <th>Status</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            var isAdmin = user.Roles.Contains("Admin");
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.UserName</td>
                <td>@user.PhoneNumber</td>
                <td>@(user.IsActive ? "Active" : "Locked")</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Edit</a>
                    <form asp-action="ToggleActive" asp-route-id="@user.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-warning" @(isAdmin ? "disabled" : null)>@((user.IsActive ? "Deactivate" : "Activate"))</button>
                    </form>
                    <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this user?');">
                        <button type="submit" class="btn btn-sm btn-danger" @(isAdmin ? "disabled" : null)>Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table> 