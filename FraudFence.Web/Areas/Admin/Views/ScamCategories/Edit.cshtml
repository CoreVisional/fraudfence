@model FraudFence.Web.Areas.Admin.Controllers.ScamCategoriesController.EditScamCategoryViewModel
@{
    ViewData["Title"] = "Edit Scam Category";
    var categories = ViewBag.Categories as List<FraudFence.EntityModels.Models.ScamCategory>;
}
<h1>Edit Scam Category</h1>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ParentCategoryId">Parent Category (optional)</label>
        <select asp-for="ParentCategoryId" class="form-control">
            <option value="">None</option>
            @if (categories != null)
            {
                foreach (var cat in categories)
                {
                    <option value="@cat.Id" selected="@(cat.Id == Model.ParentCategoryId ? "selected" : null)">@cat.Name</option>
                }
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 